{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"allowJs": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"lib": ["dom", "esnext"],
		"jsx": "preserve",
		"types": ["vite/client"]
	},
	"include": ["**/*.ts", ".vitepress/**/*.ts"],
	"exclude": ["node_modules", ".vitepress/cache", "dist"]
}
